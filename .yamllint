---
extends: default

rules:
  line-length:
    max: 200
    level: warning
  indentation:
    spaces: 2
    indent-sequences: whatever
  truthy:
    allowed-values: ['true', 'false', 'on', 'off']
    level: warning
  document-start: disable
  trailing-spaces: disable
  new-line-at-end-of-file: disable
  brackets:
    min-spaces-inside: 0
    max-spaces-inside: 1
  comments:
    min-spaces-from-content: 1
